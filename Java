// Smooth scrolling for navigation links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }
    });
});

// Navbar background on scroll
window.addEventListener('scroll', function() {
    const navbar = document.querySelector('.navbar');
    if (window.scrollY > 100) {
        navbar.style.background = 'rgba(10, 10, 10, 0.95)';
        navbar.style.backdropFilter = 'blur(10px)';
    } else {
        navbar.style.background = 'rgba(10, 10, 10, 0.95)';
    }
});

// Connect Wallet button functionality
document.querySelector('.connect-wallet-btn').addEventListener('click', function() {
    alert('Wallet connection functionality would be implemented here!');
    // In a real Web3 app, you would integrate with MetaMask or other wallet providers
});

// NFT card hover effects
document.querySelectorAll('.nft-card').forEach(card => {
    card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-10px)';
    });
    
    card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
    });
});

// Mint button functionality
document.querySelector('.btn-secondary').addEventListener('click', function() {
    alert('Minting functionality would be implemented here!');
    // This would connect to your smart contract for minting
});

// View details button functionality
document.querySelectorAll('.view-details-btn').forEach(button => {
    button.addEventListener('click', function(e) {
        e.stopPropagation();
        const nftCard = this.closest('.nft-card');
        const nftTitle = nftCard.querySelector('h3').textContent;
        alert(`Viewing details for: ${nftTitle}`);
        // In a real app, this would open a modal with NFT details
    });
});

// Parallax effect for hero section
window.addEventListener('scroll', function() {
    const scrolled = window.pageYOffset;
    const hero = document.querySelector('.hero');
    hero.style.transform = `translateY(${scrolled * 0.5}px)`;
});
